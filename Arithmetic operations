#include<stdio.h>
int main(){
    int op1=0, op2=0, choice=0, result=0;
    printf("enter two operands:\n");
    scanf("%d %d",&op1, &op2);
    printf("select the operation:\n");
    printf("1.Addition \n 2.subtraction \n 3.Multiplication \n 4.Division \n 5.Remainder\n");
    printf("enter the choice:");
    scanf("%d",&choice);
    switch(choice)
    {
        case 1:
       result=op1+op1;
       break;

       case 2:
       result=op1-op2;
       break;

       case 3:
       result=op1*op2;
       break;

       case 4:
       if(op2!=0)
       {
       result=op1/op2;
       break;
       }
       else
    {
        printf("please input a non zero denomenator");
        return 0;
    }

       case 5:
       result=op1%op2;
       break;

       default:
       printf("invalid output");
       return 0;
    }
       printf("result = %d",result);
       return 0;
    }


